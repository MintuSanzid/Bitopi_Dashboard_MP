<script>
    function fnFormatDetails(itable, pos) {
        var sOut = "<table id=\"inner" + pos + "\">";
        sOut += itable;
        sOut += "</table>";
        return sOut;
    }

    function fnFormatDetails1(jtable, pos1, pos2) {
        var sOut = "<table id=\"doubleinner" + pos1 + '_' + pos2 + "\">";
