

<div class="">
    <span data-ng-repeat="_cmetrics in _ConstraintsMetrics">
        <h2 class="glyphicon"> {{_cmetrics.name}}</h2>
        <div class="">
            <span data-ng-repeat="act in activities">
                <h3 class="glyphicon glyphicon-plus">
                    <input id="_cmetrics_{{_cmetrics.key}}_{{act}}" type="checkbox" name="producttype" value="{{act}}" onclick="change(this)" /> {{act}}
                </h3>
                <p>
                    <span data-ng-repeat="pri in priorities">
                        <input id="_cmetrics_{{_cmetrics.key}}_{{act}}_{{pri}}" name="_cmetrics_{{_cmetrics.key}}_{{act}}" type="radio" value="{{pri}}" onchange="changeRB(this)" /> <span> {{pri}} </span><br />
                    </span>
                </p>
            </span>

            <span>
                <h3 class="glyphicon glyphicon-plus ng-binding"> <input id="_cmetrics_{{_cmetrics.key}}_Thumbnail" type="checkbox" name="producttype" value="Thumbnail" ng-click="changeCmetricsThumbnail(this)"> Thumbnail </h3>
                <p> Enable or disable to checkbox checked </p>
            </span>
        </div>
    </span>
</div>
